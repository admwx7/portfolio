{
  "name": "amscripting-portfolio",
  "description": "A portfolio web-app for hosting my blog and current / past projects",
  "license": "GPL-3.0",
  "author": "Austin Murdock <admwx7@gmail.com> (https://amscripting.com)",
  "repository": {
    "type": "git",
    "url": "git@github.com:admwx7/portfolio"
  },
  "dependencies": {
    "@material/mwc-icon": "~0.18",
    "firebase": "~7.19",
    "lit-element": "~2.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "~7.10",
    "@babel/plugin-proposal-decorators": "~7.10",
    "@babel/preset-typescript": "~7.10",
    "@open-wc/building-rollup": "~1.8",
    "@rollup/plugin-typescript": "~5.0",
    "babel": "~6.23",
    "copyfiles": "~2.3",
    "es-dev-server": "~1.57",
    "eslint": "~7.7",
    "eslint-config-google": "~0.14",
    "eslint-plugin-chai-expect": "~2.2",
    "eslint-plugin-html": "~6.0",
    "rimraf": "~3.0",
    "rollup": "~2.26",
    "typescript": "~4.0",
    "web-component-tester": "~6.9"
  },
  "engines": {
    "node": "^12",
    "npm": "^6"
  },
  "scripts": {
    "build": "rimraf dist && npm run build:bundle && npm run build:copy",
    "build:bundle": "rollup -c rollup.config.js",
    "build:copy": "copyfiles manifest.json images/** dist",
    "start": "es-dev-server --file-extensions .ts --node-resolve --babel --open",
    "start:build": "npm run build && es-dev-server --root-dir dist --app-index index.html --compatibility none --open",
    "lint": "eslint . --ext ts,html --ignore-path .gitignore",

    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting"
  }
}
