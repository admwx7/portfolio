{
  "name": "amscripting-portfolio",
  "description": "A portfolio web-app for hosting my blog and current / past projects",
  "license": "GPL-3.0",
  "author": "Austin Murdock <admwx7@gmail.com> (https://amscripting.com)",
  "repository": {
    "type": "git",
    "url": "git@github.com:admwx7/portfolio"
  },
  "dependencies": {
    "@material/mwc-icon": "~0.18",
    "@webcomponents/webcomponentsjs": "webcomponents/webcomponentsjs#~2.2",
    "browser-update": "~3.3",
    "firebase": "^7.19.1",
    "lit-element": "~2.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-typescript": "^7.10.4",

    "autoprefixer": "^7",
    "es-dev-server": "^1.57.3",
    "eslint": "^4",
    "eslint-config-google": "^0.9",
    "eslint-plugin-chai-expect": "^1",
    "eslint-plugin-html": "^4",
    "postcss-cli": "^4",
    "postcss-html": "^0.20",
    "web-component-tester": "~6.9"
  },
  "engines": {
    "node": "^12",
    "npm": "^6"
  },
  "scripts": {
    "autoprefixer": "postcss \"build/**/*.html\" -r -u autoprefixer -s postcss-html --no-map",
    "build": "polymer install && polymer build && npm run autoprefixer",
    "lint": "npm run lint:javascript",
    "lint:javascript": "eslint . --ext js,html --ignore-path .gitignore",
    "test": "polymer test",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "start": "es-dev-server --file-extensions .ts --node-resolve --babel --open"
  }
}
