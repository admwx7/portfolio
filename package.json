{
  "name": "amscripting-portfolio",
  "description": "A portfolio web-app for hosting my blog and current / past projects",
  "license": "GPL-3.0",
  "author": "Austin Murdock <admwx7@gmail.com> (https://amscripting.com)",
  "repository": {
    "type": "git",
    "url": "git@github.com:admwx7/portfolio"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "bower": "^1.8.2",
    "eslint": "^4.13.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-html": "^4.0.1",
    "polymer-cli": "^1.5.7",
    "postcss-cli": "^4.1.1",
    "postcss-html": "^0.12.0"
  },
  "engines": {
    "node": "^8.2.1",
    "npm": "^5.6.0",
    "bower": "^1.8.2"
  },
  "scripts": {
    "autoprefixer": "postcss \"build/**/*.html\" -r -u autoprefixer -s postcss-html --no-map",
    "build": "polymer install && polymer build && npm run autoprefixer",
    "lint": "npm run lint:javascript",
    "lint:javascript": "eslint . --ext js,html --ignore-path .gitignore",
    "test": "polymer test",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting"
  }
}
